\mode<presentation>

% Title page: coustom

\defbeamertemplate*{title page}{huLogo}[1][]
{
  \vbox{}
  {\usebeamercolor[fg]{titlegraphic}
  	\def\shift{0.04\textheight}
  	\begin{tikzpicture}[remember picture, overlay]
  		\node [below left,yshift=-\shift,xshift=-\shift] at (current page.north east) {\inserttitlegraphic};
  	\end{tikzpicture}
  }
  \vskip 0pt plus 4filll\par
  \begingroup
    \begin{beamercolorbox}[sep=4pt,left,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=4pt,left,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=4pt,left,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=4pt,left,#1]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}
  \endgroup
  \vskip 0pt plus 1filll
}

% Section page: plain

\defbeamertemplate*{section page}{DarkHU}[1][]
{
  \begingroup
    \centering
    \begin{beamercolorbox}[sep=12pt,center,#1]{part title}
      \usebeamerfont{section title}\insertsection\par
    \end{beamercolorbox}
  \endgroup
}

