\mode<presentation>

\setbeamercolor*{footline}{parent=palette tertiary}
\setbeamercolor*{title in head/foot}{parent=palette secondary}
\setbeamercolor*{date in head/foot}{parent=palette primary}


% Navigation symbols

\defbeamertemplate*{navigation symbols}{DarkHU}
{%
  \hbox{%
    \hbox{\insertframenavigationsymbol}
    \hbox{\insertsubsectionnavigationsymbol}
    \hbox{\insertsectionnavigationsymbol}
  }%
}


% Footline

\setbeamertemplate{footline}{
	\begin{beamercolorbox}[sep=1ex, leftskip=2ex, rightskip=2ex]{footline}
		\usebeamerfont{title in head/foot}\insertshorttitle
		\ifx\insertsubtitle\@empty%
		\else%
			\mbox{} --- \insertsubtitle
		\fi
		\mbox{}\hspace*{0pt plus 1filll}
		{\usebeamerfont{page number in head/foot}\insertframenumber}
	\end{beamercolorbox}
}


\mode
<all>
